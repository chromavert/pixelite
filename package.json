{
  "name": "@chromavert/pixelite",
  "description": "A universal TypeScript library for image processing that works seamlessly in both Node.js and browser environments with SSR support.",
  "version": "0.0.0",
  "author": "Chromavert",
  "license": "MIT",
  "type": "module",
  "private": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "browser": {
    "sharp": false
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "vitest --watch",
    "test": "vitest",
    "format": "prettier --write .",
    "build": "tsup"
  },
  "keywords": [
    "image",
    "processing",
    "sharp",
    "typescript",
    "node",
    "browser"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/maikeleckelboom/chromavert-pixelite.git"
  },
  "bugs": {
    "url": "https://github.com/maikeleckelboom/chromavert-pixelite/issues"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/sharp": "^0.32.0",
    "@vitest/browser": "^3.1.2",
    "playwright": "^1.52.0",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "type-fest": "^4.40.0",
    "vitest": "^3.1.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "optionalDependencies": {
    "sharp": "^0.34.1"
  },
  "metadata": {
    "sharp": {
      "platforms": [
        "server"
      ],
      "installation": {
        "requiredEnvironments": [
          "node"
        ],
        "command": "npm install sharp",
        "troubleshooting": "https://sharp.pixelift.io/install"
      },
      "browserWarning": "Sharp is automatically excluded in browser builds"
    }
  }
}